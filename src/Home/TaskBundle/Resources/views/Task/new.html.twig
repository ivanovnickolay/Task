{% extends '::base.html.twig' %}
{% block form -%}
  <h1>Создание новой задачи</h1>
           {{ form_start(form,{'attr':{'class':'form-horizontal'}})}}
           {{ form_errors(form) }}
         <div class="form-group">
             {{ form_label(form.name_task,null,{'label_attr':{'class':'col-sm-3 control-label'}}) }}
             <div class="col-sm-6">{{ form_widget(form.name_task,{attr:{'class':'form-control'}})}} </div>
         </div>
         <div class="form-group">
            {{ form_label(form.begin_task,null,{'label_attr':{'class':'col-sm-3 control-label'}}) }}
            <div class="col-sm-6">{{ form_widget(form.begin_task,{attr:{'class':'form-control'}}) }} </div>
         </div>
         <div class="form-group">
        {{ form_label(form.end_task,null,{'label_attr':{'class':'col-sm-3 control-label'}}) }}
         <div class="col-sm-6">{{ form_widget(form.end_task,{attr:{'class':'form-control'}}) }} </div>
        </div>
        <div class="form-group">
        {{ form_label(form.Category,null,{'label_attr':{'class':'col-sm-3 control-label'}}) }}
        <div class="col-sm-6">{{ form_widget(form.Category,{attr:{'class':'form-control'}}) }} </div>
        </div>
        <div class="form-group">
         <div class="col-sm-offset-3 col-sm-6">{{ form_row(form.submit) }} </div>
        </div>
           {{form_end(form) }}

    <ul class="record_actions">
    <li>
        <a href="{{ path('task') }}">
            Вернуться к списку
        </a>
    </li>
</ul>
{% endblock %}



