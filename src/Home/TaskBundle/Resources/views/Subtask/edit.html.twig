{% extends '::base.html.twig' %}
{% block form_subtask %}
<h1>Редактирование задачи</h1>
{{ form_start(edit_form,{'attr':{'class':'form-horizontal'}})}}
{{ form_errors(edit_form) }}
<div class="form-group">
    {{ form_label(edit_form.Subtask,null,{'label_attr':{'class':'col-sm-3 control-label'}}) }}
    <div class="col-sm-6">{{form_widget(edit_form.Subtask,{attr:{'class':'form-control'}})}} </div>
</div>
<div class="form-group">
    {{ form_label(edit_form.begin,null,{'label_attr':{'class':'col-sm-3 control-label'}}) }}
    <div class="col-sm-6">{{ form_widget(edit_form.begin,{attr:{'class':'form-control','type':'date'}}) }} </div>
</div>
<div class="form-group">
    {{ form_label(edit_form.end,null,{'label_attr':{'class':'col-sm-3 control-label'}}) }}
    <div class="col-sm-6">{{ form_widget(edit_form.end,{attr:{'class':'form-control'}}) }} </div>
</div>
<div class="form-group">
    {{ form_label(edit_form.percent,null,{'label_attr':{'class':'col-sm-3 control-label'}}) }}
    <div class="col-sm-6">{{ form_widget(edit_form.percent,{attr:{'class':'form-control'}}) }} </div>
</div>
<div class="form-group">
    {{ form_label(edit_form.final,null,{'label_attr':{'class':'col-sm-3 control-label'}}) }}
    <div class="col-sm-6">{{ form_widget(edit_form.final,{attr:{'class':'form-control'}}) }} </div>
</div>
<div class="form-group">
    <div class="col-sm-offset-3 col-sm-6">{{ form_row(edit_form.submit) }} </div>
</div>
{{form_end(edit_form) }}
{% endblock %}