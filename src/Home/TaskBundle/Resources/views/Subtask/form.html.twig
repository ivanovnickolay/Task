{% extends '::base.html.twig' %}
{% block form_subtask %}
<h1>Создание новой задачи</h1>
{{ form_start(form,{'attr':{'class':'form-horizontal'}})}}
{{ form_errors(form) }}
<div class="form-group">
    {{ form_label(form.Subtask,null,{'label_attr':{'class':'col-sm-3 control-label'}}) }}
    <div class="col-sm-6">{{ form_widget(form.Subtask,{attr:{'class':'form-control'}})}} </div>
</div>
<div class="form-group">
    {{ form_label(form.begin,null,{'label_attr':{'class':'col-sm-3 control-label'}}) }}
    <div class="col-sm-6">{{ form_widget(form.begin,{attr:{'class':'form-control','type':'date'}}) }} </div>
</div>
<div class="form-group">
    {{ form_label(form.end,null,{'label_attr':{'class':'col-sm-3 control-label'}}) }}
    <div class="col-sm-6">{{ form_widget(form.end,{attr:{'class':'form-control'}}) }} </div>
</div>
<div class="form-group">
    {{ form_label(form.percent,null,{'label_attr':{'class':'col-sm-3 control-label'}}) }}
    <div class="col-sm-6">{{ form_widget(form.percent,{attr:{'class':'form-control'}}) }} </div>
</div>
<div class="form-group">
    {{ form_label(form.final,null,{'label_attr':{'class':'col-sm-3 control-label'}}) }}
    <div class="col-sm-6">{{ form_widget(form.final,{attr:{'class':'form-control'}}) }} </div>
</div>
<div class="form-group">
    <div class="col-sm-offset-3 col-sm-6">{{ form_row(form.submit) }} </div>
</div>
{{form_end(form) }}
{% endblock %}